<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/uniform_padding"
    tools:context=".fragments.ProfileRegistrationFragment_2">

    <TextView
        android:id="@+id/tv_companyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:textColor="@color/dark_gray"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Phone Number"
        android:textColor="@color/dark_gray"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/txt_companyphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:inputType="phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Location"
        android:textColor="@color/dark_gray"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/txt_companylocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Motto"
        android:textColor="@color/dark_gray"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/txt_companymotto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Motto"
        android:textColor="@color/dark_gray"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_uploadimage"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginRight="25dp"
            android:text="Upload"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_companyphoto_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:textSize="12dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_register_profile"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</LinearLayout>